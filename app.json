{
  "expo": {
    "name": "mercurial-native",
    "slug": "mercurial-native",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/mercurial.png",
    "scheme": "Mercurial Notes",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/mercurial.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cris314159.mercurialnative"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/mercurial.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR"
      ],
      "package": "com.cris314159.mercurialnative"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-calendar",
        {
          "calendarPermission": "The app needs to access your calendar.",
          "remindersPermission": "The app needs to access your reminders."
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "2fc319d4-c6e2-445f-8479-5f8218189211"
      }
    }
  }
}
